{
  "name": "md-to-pixiv-novel",
  "displayName": "Markdown to pixiv Novel",
  "description": "Markdownをpixiv小説タグに変換するVSCode拡張機能",
  "version": "1.0.3",
  "license": "WTFPL",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/md-to-pixiv-novel"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "pixiv",
    "novel",
    "converter",
    "japanese",
    "ruby",
    "でんでんマークダウン"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "source.md-pixiv-novel",
        "path": "./syntaxes/md-pixiv-novel.tmLanguage.json",
        "injectTo": [
          "source.markdown"
        ]
      }
    ],
    "commands": [
      {
        "command": "md-to-pixiv-novel.convertFile",
        "title": "Markdown → pixiv小説: ファイル全体を変換",
        "category": "Markdown to pixiv Novel"
      },
      {
        "command": "md-to-pixiv-novel.convertSelection",
        "title": "Markdown → pixiv小説: 選択範囲を変換",
        "category": "Markdown to pixiv Novel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "md-to-pixiv-novel.convertFile",
          "group": "1_modification@1",
          "when": "editorTextFocus"
        },
        {
          "command": "md-to-pixiv-novel.convertSelection",
          "group": "1_modification@2",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "md-to-pixiv-novel.convertFile",
          "when": "editorIsOpen"
        },
        {
          "command": "md-to-pixiv-novel.convertSelection",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  }
}
