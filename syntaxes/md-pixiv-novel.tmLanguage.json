{
  "scopeName": "source.md-pixiv-novel",
  "injectionSelector": "text.markdown",
  "patterns": [
    {
      "match": "(\\{)([^\\|\\}]+)(\\|)([^\\|\\}]+)(\\})",
      "captures": {
        "1": { "name": "punctuation.definition.bold.begin" },
        "2": { "name": "entity.name.section" },
        "3": { "name": "punctuation.definition.bold.end" },
        "4": { "name": "markup.bold" },
        "5": { "name": "punctuation.definition.bold.end" }
      }
    },
    {
      "match": "(\\[\\[rb:)([^>\\]]+)( > )([^\\]\\]]+)(\\]\\])",
      "captures": {
        "1": { "name": "punctuation.definition.string.begin" },
        "2": { "name": "entity.name.section" },
        "3": { "name": "meta.separator" },
        "4": { "name": "markup.bold" },
        "5": { "name": "punctuation.definition.string.end" }
      }
    }
  ]
}
